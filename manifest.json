{
    "name": "silence",
    "description": "mute commentary from websites",
    "version": "0.1.0",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["youtube.js"],
            "all_frames": true,
            "run_at": "document_start"
        },
        {
            "matches": ["*://*.linkedin.com/*"],
            "js": ["linkedin.js"],
            "all_frames": true,
            "run_at": "document_start"
        }
    ],
    "icons": {
        "16": "assets/icon_16.ico",
        "24": "assets/icon_24.ico",
        "32": "assets/icon_32.ico",
        "64": "assets/icon_64.ico"
    }
  }